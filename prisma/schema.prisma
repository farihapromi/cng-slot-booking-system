generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  clerkId   String    @unique
  name      String?
  phone     String?   @unique
  email     String?   @unique
  role      String    @default("DRIVER") // DRIVER | ADMIN | SUPER_ADMIN
  stationId String? // For admins: which station they manage
  createdAt DateTime  @default(now())
  bookings  Booking[]
}

model Station {
  id        String    @id @default(uuid())
  name      String
  address   String?
  latitude  Float?
  longitude Float?
  capacity  Int       @default(1)
  ownerId   String?
  createdAt DateTime  @default(now())
  bookings  Booking[]
}

model Booking {
  id        String   @id @default(uuid())
  userId    String
  stationId String
  slotTime  DateTime
  status    String   @default("PENDING") // PENDING | COMPLETED | CANCELLED
  createdAt DateTime @default(now())
  station   Station  @relation(fields: [stationId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@index([stationId, slotTime])
}
